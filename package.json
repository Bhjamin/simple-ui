{
  "name": "simple-ui",
  "version": "1.0.0",
  "description": "A simple React UI component library that utilizes Framer Motion and Iconoir",
  "keywords": [
    "React",
    "Typscript"
  ],
  "homepage": "https://github.com/Bhjamin/simple-ui",
  "bugs": {
    "url": "https://github.com/Bhjamin/simple-ui/issues"
  },
  "author": "Bhjamin",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bhjamin/simple-ui.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@changesets/cli": "^2.27.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "main": "./dist/index.js"
}
